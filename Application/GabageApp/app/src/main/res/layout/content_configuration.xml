<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ps.isel.ipl.pt.gabageapp.ConfigurationActivity"
    tools:showIn="@layout/activity_configuration">

    <ListView
        android:id="@+id/configurations_list"
        android:layout_width="0dp"
        android:layout_height="374dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configuration_header" />

    <ImageView
        android:id="@+id/configuration_header"
        android:layout_width="0dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toTopOf="@+id/configurations_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/statusBar" />

    <TextView
        android:id="@+id/configuration_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Configuration Id"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/configuration_header"
        app:layout_constraintEnd_toEndOf="@+id/configuration_header"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="@+id/configuration_header"
        app:layout_constraintTop_toTopOf="@+id/configuration_header"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/configuration_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Configuration Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/configuration_header"
        app:layout_constraintEnd_toEndOf="@+id/configuration_header"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="@+id/configuration_header"
        app:layout_constraintTop_toBottomOf="@+id/configuration_id_label"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/configuration_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/configuration_id_label"
        app:layout_constraintEnd_toEndOf="@+id/configuration_header"
        app:layout_constraintStart_toEndOf="@+id/configuration_id_label"
        app:layout_constraintTop_toTopOf="@+id/configuration_id_label" />

    <TextView
        android:id="@+id/configuartion_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="N/D"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/configuration_name_label"
        app:layout_constraintEnd_toEndOf="@+id/configuration_header"
        app:layout_constraintStart_toEndOf="@+id/configuration_name_label"
        app:layout_constraintTop_toTopOf="@+id/configuration_name_label" />

    <ImageButton
        android:id="@+id/add_communications_button"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/configuration_header"
        app:layout_constraintEnd_toEndOf="@+id/configuration_header"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configuartion_name_text"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_input_add" />
</android.support.constraint.ConstraintLayout>
