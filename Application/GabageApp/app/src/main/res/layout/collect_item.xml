<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/collect_item_header"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/statusBar" />

    <TextView
        android:id="@+id/start_date_collect_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Start Date"
        app:layout_constraintBottom_toBottomOf="@+id/collect_item_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/collect_item_header"
        app:layout_constraintTop_toTopOf="@+id/collect_item_header"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/finish_date_collect_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Finish Date"
        app:layout_constraintBottom_toBottomOf="@+id/collect_item_header"
        app:layout_constraintEnd_toEndOf="@+id/collect_item_header"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="@+id/collect_item_header"
        app:layout_constraintTop_toBottomOf="@+id/start_date_collect_label" />

    <TextView
        android:id="@+id/satrt_date_collect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="N/A"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/start_date_collect_label"
        app:layout_constraintEnd_toEndOf="@+id/collect_item_header"
        app:layout_constraintStart_toEndOf="@+id/start_date_collect_label"
        app:layout_constraintTop_toTopOf="@+id/start_date_collect_label" />

    <TextView
        android:id="@+id/finish_date_collect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="N/A"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/finish_date_collect_label"
        app:layout_constraintEnd_toEndOf="@+id/collect_item_header"
        app:layout_constraintStart_toEndOf="@+id/finish_date_collect_label"
        app:layout_constraintTop_toTopOf="@+id/finish_date_collect_label" />
</android.support.constraint.ConstraintLayout>