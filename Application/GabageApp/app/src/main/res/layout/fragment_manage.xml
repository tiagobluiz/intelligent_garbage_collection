            app:layout_constraintBottom_toBottomOf="@+id/red_state_image"
            app:layout_constraintEnd_toEndOf="@+id/red_state_image"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/red_state_image"
            app:layout_constraintTop_toTopOf="@+id/red_state_image"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/green_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
